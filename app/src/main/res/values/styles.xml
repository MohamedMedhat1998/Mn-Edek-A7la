<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Deep_Purple_700</item>
        <item name="colorPrimaryDark">@color/Deep_Purple_900</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/Brown_900</item>
    </style>

    <style name="DetailsActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Black</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenTextStyle">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/splash_screen_text_size</item>
    </style>

    <style name="SplashScreenLogoStyle">
        <item name="android:layout_width">@dimen/splash_screen_logo_dim</item>
        <item name="android:layout_height">@dimen/splash_screen_logo_dim</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CategoryItemTextStyle">
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DetailsActivityLabelStyle">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="DetailsActivityNormalTextStyle">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="DetailsActivitySeparatorStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">0.25dp</item>
        <item name="android:background">@color/Black</item>
        <item name="android:gravity">right</item>
    </style>

</resources>
