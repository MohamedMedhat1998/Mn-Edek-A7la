<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/category_card_dim"
        android:layout_height="@dimen/category_card_dim">

        <ImageView
            android:id="@+id/iv_category_icon"
            android:layout_width="@dimen/category_icon_dim"
            android:layout_height="@dimen/category_icon_dim"
            android:src="@color/Brown_900"
            app:layout_constraintBottom_toTopOf="@+id/tv_category_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CategoryItemTextStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Title" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
